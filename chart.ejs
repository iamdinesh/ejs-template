<div>
    <canvas id="<%= id %>" style="width: 100%"></canvas>
    <script>
        var data = JSON.parse('<%- JSON.stringify(data) %>')
        var key = '<%= key %>'
        var title = '<%= title %>'
        var canvasId = '<%= id %>'
        var labels = [],
            values = [];
        var chartHeight = data.length >= 16 ? data.length * 25 : 400
        data.forEach(d => {
            labels.push(d.staff);
            values.push(d[key])
        })
        var canvas = document.getElementById(canvasId);
        canvas.style.height = chartHeight + "px"
        var ctx = canvas.getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'No of Days',
                    data: values,
                    backgroundColor: "#1281ca"
                }]
            },
            options: {
                indexAxis: 'y',
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: title
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        beginAtZero: false,
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
</div>